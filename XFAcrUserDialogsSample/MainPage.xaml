<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFAcrUserDialogsSample.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Acr UserDialogs" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Button Text="Alert" Clicked="Button_Clicked"/>
        <Button Text="Confirm" Clicked="Button_Clicked_1"/>
        <Button Text="Prompt" Clicked="Button_Clicked_2"/>
        <Button Text="Loading" Clicked="Button_Clicked_3"/>
    </StackLayout>

</ContentPage>
